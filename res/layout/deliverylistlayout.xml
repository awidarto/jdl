<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout 
            android:id="@+id/topFrame"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:background="@color/green">
            <TextView
	            android:id="@+id/lbl_orderCount"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="2dp"
	            android:text="@string/ordercountlabel"
		        android:textColor="@color/black"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textStyle="bold" />
            	
	        <TextView 
	            android:id="@+id/orderCount"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textStyle="bold"   
		        android:layout_margin="2dp"
		        android:textColor="@color/black"
		        android:layout_toRightOf="@+id/lbl_orderCount"
	            />
	        <LinearLayout 
	            android:layout_below="@+id/orderCount"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            >
		        <TextView 
		            android:id="@+id/codCount"
		            android:layout_height="wrap_content"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:padding="2dp"
		            android:gravity="center"
		            android:textStyle="bold"
		            android:textAppearance="?android:attr/textAppearanceSmall"   
			        android:layout_margin="2dp"
			        android:textColor="@color/white"
			        android:background="@color/red"
			        android:text="COD"
		            />
		        <TextView 
		            android:id="@+id/ccodCount"
		            android:layout_height="wrap_content"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:padding="2dp"
		            android:gravity="center"
		            android:textStyle="bold"
		            android:textAppearance="?android:attr/textAppearanceSmall"   
			        android:layout_margin="2dp"
			        android:textColor="@color/white"
			        android:background="@color/orange"
			        android:text="CCOD"
		            />		        
		        <TextView 
		            android:id="@+id/doCount"
		            android:layout_height="wrap_content"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:padding="2dp"
		            android:gravity="center"
		            android:textStyle="bold"
		            android:textAppearance="?android:attr/textAppearanceSmall"   
			        android:layout_margin="2dp"
			        android:textColor="@color/white"
			        android:background="@color/blue"
			        android:text="DO"
		            />
		        <TextView 
		            android:id="@+id/psCount"
		            android:layout_height="wrap_content"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:padding="2dp"
		            android:gravity="center"
		            android:textStyle="bold"
		            android:textAppearance="?android:attr/textAppearanceSmall"   
			        android:layout_margin="2dp"
			        android:textColor="@color/white"
			        android:background="@color/darkgreen"
			        android:text="PS"
		            />	            	            
	        </LinearLayout>
	        	        	        	
                       
        </RelativeLayout>

    <ListView android:id="@+id/listDelivery"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" />

    <Button
        android:id="@+id/btScanList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/scancode" />

</LinearLayout>
